<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientDetailsActiviy">

    <TextView
        android:id="@+id/patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Hans Thorsten Karl Fritz Peter Friedhelm von Willhelmsburg"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bedNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Bett 42"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/patientName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/patientName" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/patientName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/o2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:text="40"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    app:layout_constraintEnd_toStartOf="@+id/rr"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/headerO2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O₂"
                    app:layout_constraintEnd_toEndOf="@+id/o2"
                    app:layout_constraintStart_toStartOf="@+id/o2"
                    app:layout_constraintTop_toBottomOf="@+id/o2" />

                <TextView
                    android:id="@+id/rr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    app:layout_constraintBottom_toTopOf="@+id/headerO2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/o2" />

                <TextView
                    android:id="@+id/headerRR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breathes/min"
                    app:layout_constraintEnd_toEndOf="@+id/rr"
                    app:layout_constraintStart_toStartOf="@+id/rr"
                    app:layout_constraintTop_toBottomOf="@+id/rr" />

                <TextView
                    android:id="@+id/co2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="24dp"
                    android:text="5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    app:layout_constraintBottom_toBottomOf="@+id/o2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/rr"
                    app:layout_constraintTop_toTopOf="@+id/o2" />

                <TextView
                    android:id="@+id/headerCo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CO₂"
                    app:layout_constraintEnd_toEndOf="@+id/co2"
                    app:layout_constraintStart_toStartOf="@+id/co2"
                    app:layout_constraintTop_toBottomOf="@+id/co2" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart2"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Trigger settings"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:stretchColumns="0,2">

                <TableRow>

                    <TextView
                        android:padding="5dp"
                        android:text="FiO₂"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#BDBDBD" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/triggerFiO2"
                        android:padding="5dp"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_height="1px"
                    android:background="#BDBDBD">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:layout_span="2"
                        android:text=""/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="5dp"
                        android:text="Humidity"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#BDBDBD" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/triggerHumidity"
                        android:padding="5dp"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_height="1px"
                    android:background="#BDBDBD">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:layout_span="2"
                        android:text=""/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="5dp"
                        android:text="Pmax"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#BDBDBD" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/triggerPmax"
                        android:padding="5dp"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_height="1px"
                    android:background="#BDBDBD">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:layout_span="2"
                        android:text=""/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="5dp"
                        android:text="RR"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#BDBDBD" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/triggerRR"
                        android:padding="5dp"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_height="1px"
                    android:background="#BDBDBD">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:layout_span="2"
                        android:text=""/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="5dp"
                        android:text="VT"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#BDBDBD" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/triggerVT"
                        android:padding="5dp"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_height="1px"
                    android:background="#BDBDBD">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:layout_span="2"
                        android:text=""/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="5dp"
                        android:text="PEEP"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#BDBDBD" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/triggerPEEP"
                        android:padding="5dp"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_height="1px"
                    android:background="#BDBDBD">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:layout_span="2"
                        android:text=""/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="5dp"
                        android:text="IE"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#BDBDBD" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/triggerIE"
                        android:padding="5dp"
                        android:textSize="20sp" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>